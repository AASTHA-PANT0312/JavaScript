const promiseOne = new Promise(function(resolve, reject){
    //Do an async task
    // DB calls, cryptography, network
    setTimeout(function(){//promises contains a callback
        console.log('Async task is compelete');
        resolve()//if we do not write this then "resolve" and "then" will never got completed , so you will have your completion message displayed but your resolved msg won't display

    }, 1000)
})

promiseOne.then(function(){
    console.log("Promise consumed");
})

new Promise(function(resolve, reject){
    setTimeout(function(){
        console.log("Async task 2");
        resolve()
    }, 1000)

}).then(function(){
    console.log("Async 2 resolved");
})//doing them both at a single place

const promiseThree = new Promise(function(resolve, reject){
    setTimeout(function(){
        resolve({username: "Chai", email: "chai@example.com"})//resolve can be used to pass data mostly in form of object
    }, 1000)
})

promiseThree.then(function(user){//whatever parameter you pass in resolve you will get it here-data consumption
    console.log(user);
})

const promiseFour = new Promise(function(resolve, reject){
    setTimeout(function(){
        let error = true
        if (!error) {
            resolve({username: "hitesh", password: "123"})
        } else {
            reject('ERROR: Something went wrong')//usage of reject
        }
    }, 1000)
})
//avoiding callback hell- can use multiple then and catches
 promiseFour
 .then((user) => {
    console.log(user);
    return user.username // this does not mean that it will be stored in a variable storing 'then'
}).then((username) => {//thus we are using chaining- uprr ki value nye connection mein
    console.log(username);
}).catch(function(error){
    console.log(error);//catching the error : if above value of error will be false it will not give error.
}).finally(() => console.log("The promise is either resolved or rejected"))



const promiseFive = new Promise(function(resolve, reject){
    setTimeout(function(){
        let error = true
        if (!error) {
            resolve({username: "javascript", password: "123"})
        } else {
            reject('ERROR: JS went wrong')
        }
    }, 1000)
});
//handling by async and await
async function consumePromiseFive(){
    try {
        const response = await promiseFive // it is an object therefore write its reference not execn.
        console.log(response);
    } catch (error) {
        console.log(error);
    }//as they can not directly handle errors , they assume that the value will always come and they can have it , thus we are keeping it all in try catch block
}

consumePromiseFive()

